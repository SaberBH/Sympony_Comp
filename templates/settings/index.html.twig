{% extends 'base.html.twig' %}

{% block title %}Settings index{% endblock %}

{% block body %}
    
     <h3 align="center">Settings index</h3>
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="active-member">
						<div class="table-responsive">
							<table class="table table-xs mb-0">

    
        <thead>
            <tr>
                <th>Id</th>
                <th>Aboutus</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.aboutus }}</td>
                <td>{{ setting.adresse }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.telephone }}</td>
                <td>
                    <a href="{{ path('app_settings_show', {'id': setting.id}) }}">show</a>
                    <a href="{{ path('app_settings_edit', {'id': setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </br> 
    </div>

    <a href="{{ path('app_settings_new') }}">Create new</a>
 
     </div>
 </div>
</div>
 </div>
  </div>
   </div>
{% endblock %}
