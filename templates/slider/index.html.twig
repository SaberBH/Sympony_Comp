{% extends 'base.html.twig' %}

{% block title %}Slider index{% endblock %}

{% block body %}
    <h3 align="center">Slider index</h3>

<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<div class="active-member">
						<div class="table-responsive">
							<table class="table table-xs mb-0">
   
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>LienReadMore</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                <td>{{ slider.id }}</td>
                <td>{{ slider.titre }}</td>
                <td>{{ slider.description }}</td>
                <td>{{ slider.lienReadMore }}</td>
                <td>
                    <a href="{{ path('app_slider_show', {'id': slider.id}) }}">show</a>
                    <a href="{{ path('app_slider_edit', {'id': slider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_slider_new') }}">Create new</a>

      </div>
 </div>
</div>
 </div>
  </div>
   </div>
{% endblock %}
